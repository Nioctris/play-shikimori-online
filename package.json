  "main": "index.js",
  "dependencies": {
    "async-retry": "^1.2.3",
    "kv-storage-polyfill": "^1.1.0",
    "vue": "^2.6.10",
    "vue-analytics": "^5.17.0",
    "vuetify": "^1.5.16",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@types/video.js": "^7.2.11",
    "dotenv": "^8.0.0",
    "material-design-icons": "^3.0.1",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-copy": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-vue": "^5.0.1",
    "vue-template-compiler": "^2.6.10"
  },
  "scripts": {
    "build:dev": "NODE_ENV=development rollup -c rollup.config.js",
    "build:prod": "NODE_ENV=production rollup -c rollup.config.js",
    "zip:dist": "cd ./dist && zip -r ../dist.zip ./*  --exclude='*__MACOSX*' --exclude='*.DS_Store*'",
    "zip:src": "zip -r ./src.zip ./* --exclude='*.zip' --exclude='*__MACOSX*' --exclude='*.DS_Store*' --exclude='node_modules*' --exclude='dist*'",
    "zip": "npm run zip:src && npm run zip:dist",
    "dev": "npm run build:dev -- --watch",
    "release": "rm -f ./*.zip && rm -rf ./dist && npm run build:prod && npm run zip"
  },
